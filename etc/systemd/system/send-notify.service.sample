[Unit]
Description="wakeup and shutdown shell by iganari"
After=network.service
Before=shutdown.target
Requires=network.service

[Service]
Type=oneshot
# RemainAfterExit=yes
RemainAfterExit=true
ExecStart=/bin/bash /usr/local/iganari/notify-server/bin/send-notify.sh wakeup
ExecStop=/bin/bash  /usr/local/iganari/notify-server/bin/send-notify.sh sleep

[Install]
WantedBy=multi-user.target
